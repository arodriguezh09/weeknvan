<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CamperBooking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/adobe_violet_light</item>
        <item name="colorPrimaryVariant">@color/adobe_violet_dark</item>
        <item name="colorOnPrimary">@color/white</item> <!-- relleno de botones -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/adobe_violet_light</item>
        <item name="colorSecondaryVariant">@color/pantone_salmon</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CamperBooking.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
    <item name="colorPrimary">@color/adobe_violet_light</item>  <!-- primario botones -->
        <item name="colorPrimaryVariant">@color/adobe_violet_dark</item> <!-- barra menu -->
        <item name="colorOnPrimary">@color/white</item> <!-- relleno botones -->
        <item name="colorPrimaryDark" tools:targetApi="23">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item> <!-- idk -->
        <item name="colorSecondaryVariant">@color/adobe_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/pantone_azul</item>
        <item name="itemTextColor">@color/pantone_azul</item>
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents.DayNight">
        <item name="ratingBarStyle">@style/Controls.RatingBar</item>
        <item name="colorControlActivated">@color/pantone_salmon</item>
        <item name="colorControlNormal">@color/gris</item>
    </style>

    <style name="Controls.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">false</item>
    </style>

</resources>