<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CamperBooking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pantone_night_azul</item>
        <item name="colorPrimaryVariant">#00322E</item>
        <item name="colorOnPrimary">#BABABA</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pantone_night_limon</item>
        <item name="colorSecondaryVariant">@color/pantone_night_limon</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CamperBooking.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pantone_night_azul</item>
        <item name="colorPrimaryVariant">@color/pantone_night_limon</item>
        <item name="colorOnPrimary">#BABABA</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pantone_night_limon</item>
        <item name="colorSecondaryVariant">#7A6E21</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">#BABABA</item>
        <item name="itemIconTint">@color/pantone_night_azul</item>
        <item name="itemTextColor">@color/pantone_night_azul</item>
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents.DayNight">
        <item name="ratingBarStyle">@style/Controls.RatingBar</item>
        <item name="colorControlActivated">@color/pantone_night_salmon</item>
        <item name="colorControlNormal">#BABABA</item>
    </style>

    <style name="Controls.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">false</item>
    </style>

</resources>