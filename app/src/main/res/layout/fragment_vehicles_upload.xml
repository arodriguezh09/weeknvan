<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.VehiclesUploadFragment"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/adobe_violet_dark"/>
        <TextView
            android:id="@+id/tvVehiclesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir vehículo"
            android:fontFamily="@font/varelaround_regular"
            android:textColor="@color/adobe_violet_dark"
            android:layout_margin="10dp"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/adobe_violet_dark"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilVehBrand"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehBrand"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Marca"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilVehModel"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehModel"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Modelo"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilVehYear"
                    android:layout_width="130dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="80dp"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVehYear"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Año"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilVehPlate"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVehPlate"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Matrícula"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilVehType"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehType"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Tipo"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilVehFuel"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehFuel"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Combustible"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilVehPassengers"
                    android:layout_width="100dp"
                    android:layout_marginRight="16dp"

                    android:layout_height="80dp"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVehPassengers"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Asientos"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilVehBeds"
                    android:layout_width="90dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="80dp"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVehBeds"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Camas"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilVehPricePerDay"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVehPricePerDay"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Precio por día"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilVehCity"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehCity"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Ciudad"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilVehDescription"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehDescription"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Descripción"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/vehUpUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="100dp"
                    android:fontFamily="@font/varelaround_regular"
                    android:text="Guardar"
                    android:layout_gravity="right"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/vehUpSelectImages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="100dp"
                    android:fontFamily="@font/varelaround_regular"
                    android:text="Seleccionar imágenes"
                    />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>