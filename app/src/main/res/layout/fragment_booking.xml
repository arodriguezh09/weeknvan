<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.BookingFragment"
    >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:id="@+id/tvBookingBrand"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:text="Marca: " />

        <TextView
            android:id="@+id/tvBookingModel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:text="Modelo: " />

        <TextView
            android:id="@+id/tvBookingYear"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:text="Año: " />

        <TextView
            android:id="@+id/tvBookingPlate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:text="Matrícula: " />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBookingDate"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            app:boxCornerRadiusTopStart="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            android:hint="Fecha de reserva"
            app:startIconDrawable="@drawable/ic_baseline_calendar_month_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBookingDate"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvBookingTotal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="25dp"
            android:text="Total: " />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bBookingValidate"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:text="Confirmar reserva"
            app:cornerRadius="100dp"
            android:fontFamily="@font/varelaround_regular"/>
    </LinearLayout>

</FrameLayout>